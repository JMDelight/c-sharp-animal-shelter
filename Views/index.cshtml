@if (@Model.Count == 0)
{
  <p>No Species have been added yet!</p>
}
else
{
  <h1>Here is your list of Species:</h1>
  <ul>
    @foreach (var species in Model)
    {
      <li><a href="/species/@species.GetId()">@species.GetName()</a></li>
    }
  </ul>
}
<p><a href="/species/new">Add a new species</a></p>
